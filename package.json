{
	"type": "module",
	"dependencies": {},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"concurrently": "^9.2.1",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-preset-env": "^11.1.3",
		"tailwindcss": "^4.1.18"
	},
	"scripts": {
		"dev:css": "postcss postcss/styles.css -o styles.css --watch",
		"dev:server": "trunk serve",
		"dev": "concurrently \"bun run dev:css\" \"bun run dev:server\"",
		"build:css": "postcss postcss/styles.css -o styles.css",
		"build:server": "trunk build",
		"build": "concurrently \"bun run build:css\" \"bun run build:server\""
	}
}
